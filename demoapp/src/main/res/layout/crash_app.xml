<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Runtime Exception!"
        android:onClick="runtimeException"
        android:id="@+id/runtimeBtn"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="JSON Exception!"
        android:onClick="jsonException"
        android:id="@+id/jsonBtn"
        android:layout_below="@+id/runtimeBtn"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="General Exception!"
        android:onClick="generalException"
        android:id="@+id/exceptionBtn"
        android:layout_below="@+id/jsonBtn"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:orientation="horizontal"
        android:id="@+id/ll"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/exceptionBtn">
    </LinearLayout>

</RelativeLayout>